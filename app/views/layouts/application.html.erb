<!DOCTYPE html>
<html>
  <head>
    <title>ViewingPartyLite</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <header id='nav'>
    <div style='float:left; color: white; font-size: larger'><%= link_to 'Home', root_path %></div>
    <% if current_user %>
      <div style='float:right; color: white; font-size: larger'><%= link_to 'Log Out', logout_path, method: :delete %></div>
    <% else %>
      <div style='float:right; color: white; font-size: larger'><%= link_to 'Log In', login_path %></div>
    <% end %>
    <br>
    <div style='text-align:center'>
    <h1>Viewing Party Heavy</h1>
    <h3> <%= yield :subtitle %> </h3>
    </div>
  </header>

  <body>
    <% flash.each do |type, msg|%>
      <div class='error'>
        <%= msg %>
      </div>
    <% end %>

    <%= yield %>
  </body>
</html>
